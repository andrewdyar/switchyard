{
  "$schema": "https://mintlify.com/docs.json",
  "name": "Switchyard Documentation",
  "theme": "almond",
  "logo": {
    "dark": "/logo/dark.svg",
    "light": "/logo/light.svg",
    "height": "50px",
    "width": "auto"
  },
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#1F7A6B",
    "light": "#4FD1B5",
    "dark": "#145C52"
  },
  "mcp": {
    "enabled": true
  },
  "chat": {
    "enabled": true,
    "prompt": "You are a helpful assistant for Switchyard, a commerce platform for grocery and inventory management. Answer questions about the Switchyard API, authentication, order flow, sweeps, picking, and warehouse operations."
  },
  "contextual": {
    "options": [
      "copy",
      "chatgpt",
      "claude",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "topbarLinks": [
    {
      "name": "Support",
      "url": "https://pipedreamtalk.slack.com/archives/C07CQG0F55E"
    }
  ],
  "topbarCtaButton": {
    "name": "Dashboard",
    "url": "https://switchyard.run/app"
  },
  "anchors": [
    {
      "name": "GitHub",
      "icon": "github",
      "url": "https://github.com/andrewdyar/switchyard"
    }
  ],
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "introduction",
              "quickstart",
              "guides/mcp-installation"
            ]
          },
          {
            "group": "Architecture",
            "pages": [
              "architecture/order-flow",
              "architecture/fulfillment",
              "architecture/module-map",
              "architecture/data-model"
            ]
          },
          {
            "group": "Authentication",
            "pages": [
              "authentication/overview",
              "authentication/rbac",
              "authentication/service-accounts"
            ]
          },
          {
            "group": "Operations",
            "pages": [
              "guides/placing-orders",
              "guides/inventory-management",
              "guides/scanner-api",
              "guides/scraping"
            ]
          },
          {
            "group": "Commerce",
            "pages": [
              "guides/cart-module"
            ]
          },
          {
            "group": "Equipment",
            "pages": [
              "guides/equipment-monitoring"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/admin/introduction"
            ]
          },
          {
            "group": "Scanner API",
            "openapi": "api-reference/scanner/openapi.yaml"
          },
          {
            "group": "Admin API",
            "openapi": "api-reference/openapi/admin.yaml"
          },
          {
            "group": "Store API",
            "pages": [
              "api-reference/store/introduction",
              "api-reference/store/carts"
            ]
          }
        ]
      }
    ]
  },
  "footerSocials": {
    "github": "https://github.com/andrewdyar/switchyard"
  },
  "api": {
    "baseUrl": "https://api.switchyard.run",
    "auth": {
      "method": "bearer"
    },
    "playground": {
      "display": "interactive"
    }
  },
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true
  },
  "search": {
    "prompt": "Search Switchyard docs..."
  }
}
