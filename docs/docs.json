{
  "$schema": "https://mintlify.com/docs.json",
  "name": "Switchyard Documentation",
  "theme": "mint",
  "logo": {
    "dark": "/logo/dark.svg",
    "light": "/logo/light.svg"
  },
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#1F7A6B",
    "light": "#4FD1B5",
    "dark": "#145C52"
  },
  "mcp": {
    "enabled": true
  },
  "topbarLinks": [
    {
      "name": "Support",
      "url": "https://pipedreamtalk.slack.com/archives/C07CQG0F55E"
    }
  ],
  "topbarCtaButton": {
    "name": "Dashboard",
    "url": "https://switchyard.run/app"
  },
  "anchors": [
    {
      "name": "GitHub",
      "icon": "github",
      "url": "https://github.com/andrewdyar/switchyard"
    }
  ],
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "introduction",
              "quickstart"
            ]
          },
          {
            "group": "Architecture",
            "pages": [
              "architecture/order-flow",
              "architecture/module-map",
              "architecture/data-model"
            ]
          },
          {
            "group": "Authentication",
            "pages": [
              "authentication/overview",
              "authentication/rbac",
              "authentication/service-accounts"
            ]
          },
          {
            "group": "Operations",
            "pages": [
              "guides/placing-orders",
              "guides/inventory-management",
              "guides/scanner-api"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/admin/introduction"
            ]
          },
          {
            "group": "Scanner API",
            "openapi": "api-reference/scanner/openapi.yaml"
          },
          {
            "group": "Admin API",
            "openapi": "api-reference/openapi/admin.yaml"
          }
        ]
      }
    ]
  },
  "footerSocials": {
    "github": "https://github.com/andrewdyar/switchyard"
  },
  "api": {
    "baseUrl": "https://api.switchyard.run",
    "auth": {
      "method": "bearer"
    },
    "playground": {
      "display": "interactive"
    }
  },
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true
  },
  "search": {
    "prompt": "Search Switchyard docs..."
  }
}
