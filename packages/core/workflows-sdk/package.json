{
  "name": "@switchyard/workflows-sdk",
  "version": "2.12.1",
  "description": "Set of workflows tooling for Medusa",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./composer": "./dist/utils/composer/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/andrewdyar/switchyard",
    "directory": "packages/core/workflows-sdk"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "!dist/**/__tests__",
    "!dist/**/__mocks__",
    "!dist/**/__fixtures__"
  ],
  "author": "Switchyard",
  "license": "MIT",
  "devDependencies": {
    "@switchyard/types": "workspace:*"
  },
  "dependencies": {
    "@switchyard/deps": "workspace:*",
    "@switchyard/modules-sdk": "workspace:*",
    "@switchyard/orchestration": "workspace:*",
    "@switchyard/utils": "workspace:*",
    "ulid": "^2.3.0"
  },
  "scripts": {
    "build": "yarn run -T rimraf dist && yarn run -T tsc --build",
    "watch": "yarn run -T tsc --build --watch",
    "test": "../../../node_modules/.bin/jest --bail --forceExit --testPathPattern=src",
    "test:run": "node ./dist/utils/_playground.js"
  }
}
